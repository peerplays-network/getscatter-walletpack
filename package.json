{
  "name": "walletpack",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci",
    "build": "lerna exec -- babel --config-file ../../babel.config.js --out-dir dist lib && node scripts/copy-files",
    "links": "lerna exec -- yarn link",
    "publish": "node ./scripts/prepublish.js && lerna publish",
    "testfile": "cross-env WALLETPACK_TESTING=true mocha --require @babel/register --require @babel/polyfill --exit --timeout 1000000",
    "test": "npm run testfile \"./packages/**/__tests__/**/*.test.js\"",
    "test:ppy": "mocha ./packages/peerplays/__tests__/**/*.test.js --require @babel/register --require @babel/polyfill --exit --timeout 1000000",
    "pack": "webpack-cli --mode=production --display-error-details"
  },
  "dependencies": {
    "@walletpack/bitcoin": "^1.0.44",
    "@walletpack/core": "^1.0.41",
    "@walletpack/eosio": "0.0.50",
    "@walletpack/ethereum": "0.0.48",
    "@walletpack/tron": "0.0.50"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.5.5",
    "@babel/runtime": "^7.0.0",
    "babel-loader": "^8.0.2",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-preset-minify": "^0.5.0-alpha.3cc09dcf",
    "chai": "^4.1.2",
    "concurrently": "^4.0.1",
    "cross-env": "^6.0.3",
    "isomorphic-fetch": "^2.2.1",
    "lerna": "^3.15.0",
    "mocha": "^6.2.2",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0"
  }
}
